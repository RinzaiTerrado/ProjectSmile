          <div class="row">
            <div class="col-md-6">
              <!-- Container for the profile picture and button -->
              <div id="profile-container">
                <!-- Display the current profile picture -->
                <img id="profile-picture" src="profile.jpg">
      
                <!-- Input field to select a new profile picture -->
                <input type="file" id="file-input" accept="image/*">
      
                <!-- Button to trigger file selection -->
                <button id="edit-button">Edit</button>
              </div>
            </div>
    
            <!-- Add two columns for the textboxes -->
            <div class="col-md-6">
                <div id="user-details">
              <div class="row">
                
                <div class="col-md-6">
                    Name
                  <input type="text" placeholder="Name">
                </div>
                <div class="col-md-6">
                    Email
                  <input type="text" placeholder="example@example.com">
                </div>
              </div>
              <div class="row mt-2">
                <div class="col-md-6">
                    Username
                  <input type="text" placeholder="Username">
                </div>
                <div class="col-md-6">
                    Contact Number
                  <input type="text" placeholder="+639...">
                </div>
              </div>
              <div class="row mt-2">
                <div class="col-md-6">
                    Account Role
                    <select>
                        <option value="option1">AAAAAAAAAAAAAAAAA</option>
                        <option value="option2">BBBBBBBBBBBBBBB</option>
                        <option value="option3">CCCCCCCCCCCCCCC</option>
                        <option value="option4">DDDDDDDDDDDDDDD</option>
                      </select>
                </div>
                <div class="col-md-6">
                    Password
                  <input type="text" placeholder="Password">
                </div>
              </div>
            </div>
          </div>          
        </div>
    
       <!--THE TABLES-->  
        <div id="THE TABLES">
            <div id="Permissions">Permissions</div>
        <div class="patients-table">
            <table>
                <tr>
                    <th>Patients</th>
                    <th></th>
                </tr>
                <tr>
                    <td><input type="checkbox" name="check1">View list of all registered clients/patients.</td>
                                   
                </tr>
                <tr>
                    <td><input type="checkbox" name="check2">Add a new client/patient to the system.</td>
                    
                </tr>
                <tr>
                    <td><input type="checkbox" name="check3">Choose and assign certain dental treatments for a client/patient.</td>
                    <td></td>
                </tr>
            </tr>
            <tr>
                <td><input type="checkbox" id ="check4" name="check4">Access the appointment history of a certain client/patient; Including past and upcoming appointment.</td>
                               
            </tr>
            <tr>
                <td><input type="checkbox" name="check5">Change details of a client/patient.</td>
                
            </tr>
            <tr>
                <td><input type="checkbox" name="check6">Delete a client/patient from the system.</td>
                <td></td>
            </tr>

            <!--Appointments Section-->
            <tr>
                <th>Appointments</th>
                <th></th>
            </tr>
            <tr>
                <td><input type="checkbox"  name="Acheck1">View list of all upcoming appointments.</td>
                               
            </tr>
            <tr>
                <td><input type="checkbox" name="Acheck2">Schedule a new appointment for a client/patient.</td>
                
            </tr>
            <tr>
                <td><input type="checkbox" name="Acheck3">Choose and assign certain dental treatments for a client/patient.</td>
                <td></td>
            </tr>
        </tr>
        <tr>
            <td><input type="checkbox" id ="check4" name="Acheck4">Change the date, time, or dental prrovider assigned to an existing appointment.</td>
                           
        </tr>
        <tr>
            <td><input type="checkbox" name="Acheck5">Cancel a scheduled appointment and removes it from the system.</td>
            
        </tr>

                    <!--Settings Section-->
                    <tr>
                        <th>Settings</th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><input type="checkbox" name="Scheck1">Change and manage account details such as username, password, and contact information.</td>
                                       
                    </tr>
                    <tr>
                        <td><input type="checkbox" name="Scheck2">Manage user roles and permissions within the dental booking management system.</td>
                        
                    </tr>

                    <!--Reports Section-->
                    <tr>
                        <th>Reports</th>
                        <th></th>
                    </tr>
